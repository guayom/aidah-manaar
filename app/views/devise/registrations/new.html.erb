<div class="form-description">
  <h2><%= t('devise.sign_up') %></h2>
  <p><%= t('devise.sign_up_description').html_safe %></p>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <% if :student == resource_name %>
    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: 'form-control', required: true %>
      <p class="error-block">
        <%= t('errors.messages.blank') %>
      </p>
    </div>

    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: 'form-control', required: true %>
      <p class="error-block">
        <%= t('errors.messages.blank') %>
      </p>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true,
                      class: "form-control #{'invalid' if resource.errors[:email].present?}",
                      required: true %>
    <p class="error-block">
      <%= t('errors.messages.invalid') %>
    </p>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: 'off', class: 'form-control', required: true %>
    <% if @minimum_password_length %>
      <p class="help-block">
        <%= t('helpers.student.password.minimum_password_length',
              minimum_password_length: @minimum_password_length) %>
      </p>
    <% end %>
    <p class="error-block">
      <%= t('errors.messages.blank') %>
    </p>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
  </div>
  <% if :student == resource_name %>
    <div class="form-group">
      <%= f.label :phone %>
      <%= f.phone_field :phone, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :branch_id %>
      <%= f.select :branch_id, options_from_collection_for_select(Branch.all, :id, :name),
                   {}, class: 'form-control' %>
    </div>

    <div class="radio">
      <label>
        <input type="radio" name="student[start_now]" id="student_start_now" value="yes" checked>
        <%= t('helpers.student.start.basic') %>
      </label>
    </div>

    <div class="radio">
      <label>
        <input type="radio" name="student[start_now]" id="student_start_now" value="no">
        <%= t('helpers.student.start.advanced') %>
      </label>
    </div>
  <% end %>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
