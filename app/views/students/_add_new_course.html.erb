<%= form_tag schedule_students_path, method: :get do %>
  <div class="form-group">
    <label>Select course</label>

    <select name="new_course" class="form-control">
      <% @student.current_dance_courses.each do |course| %>
        <option value="<%= course.id %>"><%= course.name %></option>
      <% end %>
    </select>
  </div>

  <button class="btn btn-primary">Apply for new course</button>
<% end %>
