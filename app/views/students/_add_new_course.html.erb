<%= form_tag schedule_students_path, method: :get do %>
  <div class="form-group">
    <label><%= t('helpers.student.select_course') %></label>

    <select name="new_course" class="form-control">
      <% @student.dance_courses_for_next_semester.each do |course| %>
        <option value="<%= course.id %>"><%= course.name %></option>
      <% end %>
    </select>
  </div>

  <button class="btn btn-primary"><%= t('helpers.student.apply_for_new_course') %></button>
<% end %>
