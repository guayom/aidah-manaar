<%#= render @courses %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t('devise.registrations.thank_you.title') %></h3>
  </div>
  <div class="panel-body">
    <p><%= t('devise.registrations.thank_you.text') %></p>

    <% if current_student.courses.empty? %>
      <p class="lead"><%= t('helpers.student.we_will_call_you') %></p>
    <% end %>
  </div>
</div>

<% if current_student.courses.any? %>
  <%= render 'schedule' %>
<% end %>
