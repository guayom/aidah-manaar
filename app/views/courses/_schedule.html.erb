<div class="row">
  <div class=" col-xs-offset-1 col-xs-10">
    <p><%= t('helpers.student.select_your_schedule') %></p>

    <div id="calendar"></div>

    <div id="lesson_modal" class="modal fade" tabindex="-1" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title"><%= t('helpers.student.apply_for_lesson') %></h4>
          </div>
          <div class="modal-body"></div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">
              <%= t('helpers.close') %>
            </button>
          </div>
        </div>
      </div>
    </div>

    <script>
      calendar = $('#calendar').calendar({
        events_source: '<%= lessons_path(format: :json) %>',
        first_day: 1,
        language: 'es-ES',
        modal: "#lesson_modal",
        modal_type: 'ajax',
        tmpl_cache: false,
        view: 'week'
      });

      $('#lesson_modal').on('show.bs.modal', function() {
        $(this).find('.modal-body').css('height', $(window).height() - 200);
      });
    </script>
    <style>
      [data-cal-view="day"] {
        display: none;
      }
      .cal-week-box hr {
        margin-top: 0;
      }
    </style>
  </div>
</div>
